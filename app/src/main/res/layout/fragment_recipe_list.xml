        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_pic"
        android:gravity="center_vertical"
        android:text="Recipe Name"
        android:textSize="16sp" />

